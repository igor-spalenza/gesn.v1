@using gesn.webApp.Models.Enums.Global
@model gesn.webApp.Models.ViewModels.Offer.Category.CategoryUpdateViewModel

@{
    @if (Model != null && !string.IsNullOrWhiteSpace(Model.Name))
    {
        ViewData["Title"] = $"Editar Categoria - {Model.Name}";
    }
    else
    {
        ViewData["Title"] = "Editar Categoria";
    }
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestão de Categoria</h1>

    <div class="card mb-4 shadow-sm border-warning">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-edit me-1"></i>
                <strong>Editando:</strong> @Model.Name
            </div>
            @* Botão que abre o Modal de Exclusão *@
            <button type="button" class="btn btn-outline-danger btn-sm fw-bold" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash"></i> EXCLUIR REGISTRO
            </button>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Campo oculto para o ID herdado da CategoryBaseViewModel *@
                <input type="hidden" asp-for="@Model.Id" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nome da Categoria</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descrição</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4 border-start">
                        <div class="mb-3">
                            <label asp-for="StateCode" class="form-label fw-bold">Status da Categoria</label>
                            <select asp-for="StateCode" class="form-select" asp-items="Html.GetEnumSelectList<EObjectState>()">
                            </select>
                            <span asp-validation-for="StateCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Gravar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Modal de Confirmação de Exclusão *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Você tem certeza que deseja remover a categoria <strong>@Model.Name</strong> permanentemente?</p>
                <p class="text-danger small"><strong>Atenção:</strong> Esta ação não poderá ser desfeita e pode afetar produtos vinculados.</p>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Desistir</button>
                @* Formulário dedicado para o Delete Post *@
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger px-4">Confirmar Exclusão</button>
                </form>
            </div>
        </div>
    </div>
</div>