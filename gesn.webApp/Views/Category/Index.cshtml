@using gesn.webApp.Models.ViewModels.Global
@model IEnumerable<CategorySummaryViewModel>

<partial name="_CreatePartial" model="new gesn.webApp.Models.ViewModels.Global.CategoryInsertViewModel()" />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasContent" aria-labelledby="offcanvasLabel">
    <div class="offcanvas-header bg-light border-bottom">
        <h5 class="offcanvas-title" id="offcanvasLabel">Carregando...</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body" id="sidePanelBody">
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <div class="col-2 float-end">
            <button class="btn btn-sm btn-outline-primary float-end" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCreate" aria-controls="offcanvasCreate" title="Incluir categoria">
                <i class="fa-solid fa-plus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-info"
                                            onclick="loadSidePanel('@item.Id', 'Details')" title="Detalhes">
                                        <i class="bi bi-search"></i>
                                    </button>

                                    <button type="button" class="btn btn-sm btn-outline-secondary"
                                            onclick="loadSidePanel('@item.Id', 'Edit')" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>

                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete('@item.Id', '@item.Name')" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">Nenhuma categoria encontrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true" style="z-index: 1060;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Deseja remover <strong id="strong-category-name"></strong> permanentemente?</p>
                <p class="text-danger small mb-0">Esta ação não poderá ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Desistir</button>
                <form asp-action="Delete" id="formDeleteCategory" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="delete-category-id" name="id" />
                    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const openCreate = '@(TempData["OpenCreatePanel"]?.ToString().ToLower() ?? "false")';
            if (openCreate === 'true') {
                var modal = new bootstrap.Offcanvas(document.getElementById('offcanvasCreate'));
                modal.show();
            }

            const editId = '@(TempData["OpenEditPanel"] ?? "")';
            if (editId !== '') {
                loadSidePanel(editId, 'Edit');
            }
        });

        function loadSidePanel(id, action) {
            const title = action === 'Edit' ? 'Editar' : 'Detalhes';
            const url = `/Category/Get${action}Partial/${id}`;

            document.getElementById('offcanvasLabel').innerText = title;
            document.getElementById('sidePanelBody').innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary"></div></div>';

            var bsOffcanvas = new bootstrap.Offcanvas(document.getElementById('offcanvasContent'));
            bsOffcanvas.show();

            fetch(url)
                .then(response => {
                    if (!response.ok) throw new Error("Erro na requisição");
                    return response.text();
                })
                .then(html => {
                    document.getElementById('sidePanelBody').innerHTML = html;
                    if (action === 'Edit') {
                        $.validator.unobtrusive.parse("#sidePanelBody form");
                    }
                })
                .catch(error => {
                    document.getElementById('sidePanelBody').innerHTML =
                        '<div class="alert alert-danger">Não foi possível carregar os dados. Verifique a conexão.</div>';
                });
        }

        function confirmDelete(id, name) {
            let categoryNameField = document.getElementById('strong-category-name');
            if(categoryNameField)
                categoryNameField.textContent = name;

            let idField = document.getElementById('delete-category-id');
            if(idField)
                idField.value = id;

            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            myModal.show();
        }
    </script>
}