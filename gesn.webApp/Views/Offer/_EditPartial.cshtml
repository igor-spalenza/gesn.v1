@using gesn.webApp.Models.Enums.Global
@using gesn.webApp.Models.ViewModels.Offer
@model OfferUpdateViewModel

<form asp-action="Edit" method="post" id="formEditOffer">
    <input type="hidden" asp-for="Id" />

    <div class="side-panel-details">
        <h6 class="text-primary border-bottom pb-2 mb-3">
            <i class="fas fa-edit me-2"></i>Editar Oferta
        </h6>

        <div class="row g-3">
            <div class="col-12">
                <label asp-for="Name" class="form-label small text-muted mb-1"></label>
                <input asp-for="Name" class="form-control form-control-sm" placeholder="Nome da oferta" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StateCode" class="form-label small text-muted mb-1"></label>
                <select asp-for="StateCode" class="form-select form-select-sm"
                        asp-items="Html.GetEnumSelectList<EObjectState>()">
                </select>
            </div>

            <div class="col-md-6">
                <label asp-for="SKU" class="form-label small text-muted mb-1"></label>
                <input asp-for="SKU" class="form-control form-control-sm" />
            </div>

            <div class="col-12">
                <label asp-for="@Model.Categories" class="form-label fw-bold"></label>
                <select asp-for="CategoryId"
                        asp-items="Model.Categories"
                        class="form-select">
                    <option value="">-- Selecione uma Categoria --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Description" class="form-label small text-muted mb-1"></label>
                <textarea asp-for="Description" class="form-control form-control-sm" rows="4" style="resize:none;"></textarea>
            </div>
        </div>

        <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">
            <i class="fas fa-tag me-2"></i>Valores e Produção
        </h6>

        <div class="row g-3">
            <div class="col-6">
                <label asp-for="Price" class="form-label small text-muted mb-1"></label>
                <div class="input-group input-group-sm">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Price" class="form-control" type="text" />
                </div>
            </div>
            <div class="col-6">
                <label asp-for="Cost" class="form-label small text-muted mb-1"></label>
                <div class="input-group input-group-sm">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Cost" class="form-control" type="text" />
                </div>
            </div>
            <div class="col-6">
                <label asp-for="UnitPrice" class="form-label small text-muted mb-1"></label>
                <input asp-for="UnitPrice" class="form-control form-control-sm" type="text" />
            </div>
            <div class="col-6">
                <label asp-for="AssemblyTime" class="form-label small text-muted mb-1"></label>
                <div class="input-group input-group-sm">
                    <input asp-for="AssemblyTime" class="form-control" type="number" />
                    <span class="input-group-text">min</span>
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="AssemblyInstructions" class="form-label small text-muted mb-1"></label>
                <textarea asp-for="AssemblyInstructions" class="form-control form-control-sm" rows="4" style="resize:none;"></textarea>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="Note" class="form-label small text-muted mb-1"></label>
            <textarea asp-for="Note" class="form-control form-control-sm" rows="4" style="resize:none;"></textarea>
        </div>

        <h6 class="text-secondary border-bottom pb-2 mb-3 mt-4">
            <i class="fas fa-history me-2"></i>Dados de Registro
        </h6>
        <div class="bg-light p-3 rounded small opacity-75">
            <div class="row">
                <div class="col-6 border-end">
                    <label asp-for="CreatedAt" class="form-label small text-muted mb-1"></label>
                    <span>@Model.CreatedAt.ToString("g")</span>
                </div>
                <div class="col-6 ps-3">
                    <label asp-for="LastModifiedAt" class="form-label small text-muted mb-1"></label>
                    <span>@(DateTime.MinValue != Model.LastModifiedAt ? Model.LastModifiedAt.ToString("g") : "-")</span>
                </div>
            </div>
        </div>

        <div class="row g-2 mt-4">
            <div class="col-12">
                <div class="float-end">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-save"></i>
                        </button>

                        <button type="button" class="btn btn-sm btn-outline-danger" title="Excluir">
                            <i class="fa-solid fa-xmark"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>