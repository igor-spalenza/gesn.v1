{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./wwwroot/js",
    "rootDir": "./wwwroot/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "wwwroot/ts/**/*"
  ],
  "exclude": [
    "wwwroot/js"
  ]
}